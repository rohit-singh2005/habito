<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/paymentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/chooseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Payment Method"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="12dp" />

    <!-- Payment Methods Container -->
    <LinearLayout
        android:id="@+id/paymentMethodsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!-- Footer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:background="@drawable/top_rounded_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/totalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Payment:"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/totalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹6000.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/viewPriceDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Price Details"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/checkoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed for Checkout"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:background="@drawable/checkout_button_bg" />

        <TextView
            android:id="@+id/privacyNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All data is stored privately"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#777777"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</LinearLayout>
